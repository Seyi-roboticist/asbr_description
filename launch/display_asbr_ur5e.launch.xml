<launch>

    <!-- Define the URDF path variable -->
    <let name="urdf_path" value="$(find-pkg-share asbr_description)/urdf/asbr.urdf.xacro"></let>

    <!-- Robot State Publisher Node -->
    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var urdf_path)')" />
    </node>

    <!-- Joint State Publisher GUI Node -->
    <node pkg="joint_state_publisher_gui" exec="joint_state_publisher_gui"/>

    <!-- RViz Visualization Node -->
    <node pkg="rviz2" exec="rviz2" output="screen"/>

    <!-- Initial Joint State Publisher Node -->
    <node pkg="asbr_description" exec="initial_joint_state_publisher" output="screen"/>
    
</launch>
